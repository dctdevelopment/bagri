<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:property-placeholder ignore-resource-not-found="true"/>

    <bean id="xqDataSource" class="net.xqj.marklogic.MarkLogicXQDataSource">
        <property name="properties">
            <props>
                <prop key="serverName">${xdm.schema.host}</prop>
                <prop key="port">${xdm.schema.port}</prop>
                <prop key="mode">${xdm.schema.mode}</prop>
            </props>
        </property>
    </bean>

    <bean id="xqConnection" factory-bean="xqDataSource" factory-method="getConnection">
	<constructor-arg index="0" value="${xdm.schema.username}"/>
	<constructor-arg index="1" value="${xdm.schema.password}"/>
    </bean>
    
</beans>
