<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.bagri.db</groupId>
        <artifactId>bagri-tools</artifactId>
        <version>0.8.1-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <!--groupId>com.bagri.db</groupId-->
    <artifactId>bagri-tools-vvmp</artifactId>
    <name>bagri-tools-vvmp</name>
    <description>BagRi: VisualVM plugin</description>
    <packaging>nbm</packaging>
    <organization>
      <name>Roman Orekhov, Denis Sukhoroslov</name>
      <url>www.bagridb.com</url>
    </organization>

    <properties>
	<nbm.plugin.version>3.11</nbm.plugin.version>
	<helper.plugin.version>1.7</helper.plugin.version>
    </properties>

    <dependencies>
        <dependency>
            <groupId>com.sun.tools</groupId>
            <artifactId>visualvm-core</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/com-sun-tools-visualvm-core.jar</systemPath>
        </dependency>
    	<dependency>
            <groupId>com.sun.tools</groupId>
            <artifactId>visualvm-jmx</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/com-sun-tools-visualvm-jmx.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.openide</groupId>
            <artifactId>util</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/org-openide-util.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>org.openide</groupId>
            <artifactId>modules</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/org-openide-modules.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sun.tools</groupId>
            <artifactId>visualvm-application</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/com-sun-tools-visualvm-application.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sun.tools</groupId>
            <artifactId>visualvm-application-views</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/com-sun-tools-visualvm-application-views.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sun.tools</groupId>
            <artifactId>visualvm-tools</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/com-sun-tools-visualvm-tools.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sun.tools</groupId>
            <artifactId>visualvm-charts</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/com-sun-tools-visualvm-charts.jar</systemPath>
        </dependency>
        <dependency>
            <groupId>com.sun.tools</groupId>
            <artifactId>visualvm-uisupport</artifactId>
            <version>1.0.0</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/com-sun-tools-visualvm-uisupport.jar</systemPath>
        </dependency>

        <dependency>
            <groupId>com.sun</groupId>
            <artifactId>tools</artifactId>
            <version>1.7</version>
            <scope>system</scope>
            <optional>false</optional>
            <systemPath>${project.basedir}/lib/tools.jar</systemPath>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <!--plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.7</source>
                    <target>1.7</target>
                </configuration>
            </plugin-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>nbm-maven-plugin</artifactId>
                <version>${nbm.plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <licenseName>GNU General Public License, version 2</licenseName>
                    <licenseFile>license.txt</licenseFile>
                    <sourceManifestFile>${basedir}/src/main/resources/META-INF/MANIFEST.MF</sourceManifestFile>
                    <finalName>${project.name}-${project.version}</finalName>
                    <requiresRestart>true</requiresRestart>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven-jar-plugin.version}</version>
                <configuration>
                    <archive>
                        <manifestFile>src/main/resources/META-INF/MANIFEST.MF</manifestFile>
              		<manifestEntries>
                	    <OpenIDE-Module-Specification-Version>${project.version}</OpenIDE-Module-Specification-Version>
              		</manifestEntries>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>${helper.plugin.version}</version>
                <executions>
                    <execution>
                        <id>parse-version</id>
                        <goals>
                            <goal>parse-version</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>