<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:hz="http://www.hazelcast.com/schema/spring"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
		http://www.hazelcast.com/schema/spring http://www.hazelcast.com/schema/spring/hazelcast-spring-3.6.xsd">

	<!-- Beans Declaration -->
    
	<context:property-placeholder location="file:${xdm.config.path}/${xdm.config.properties.file}" />
	<context:annotation-config />
 
	<hz:hazelcast id="hzInstance">
		<hz:config>
			<hz:spring-aware/>
			<hz:instance-name>hzInstance</hz:instance-name>
			<hz:group name="system" password="syspwd"/>
			<hz:properties>
				<hz:property name="hazelcast.jmx">true</hz:property>
				<hz:property name="hazelcast.jmx.detailed">true</hz:property>
				<hz:property name="hazelcast.logging.type">slf4j</hz:property>
				<hz:property name="hazelcast.rest.enabled">false</hz:property>
				<hz:property name="hazelcast.memcache.enabled">false</hz:property>
				<hz:property name="hazelcast.operation.thread.count">${xdm.cluster.thread.pool:8}</hz:property>
				<hz:property name="hazelcast.operation.generic.thread.count">${xdm.cluster.thread.pool:8}</hz:property>
			</hz:properties>
			<hz:network port="${xdm.cluster.port:3331}" port-auto-increment="true">
				<hz:join>
					<hz:multicast enabled="false"/>
					<hz:tcp-ip enabled="true" connection-timeout-seconds="10">
						<hz:members>${xdm.cluster.members:localhost}</hz:members>
					</hz:tcp-ip>
				</hz:join>
			</hz:network>
			<hz:executor-service name="sys-exec-pool" pool-size="${xdm.cluster.thread.pool:8}" />
			<hz:executor-service name="hz:async" pool-size="${xdm.cluster.thread.pool:8}" />
			<hz:executor-service name="hz:client" pool-size="${xdm.cluster.thread.pool:8}" />
			<hz:executor-service name="hz:query" pool-size="${xdm.cluster.thread.pool:8}" />

			<hz:serialization>
				<hz:data-serializable-factories>
					<hz:data-serializable-factory factory-id="1" class-name="com.bagri.xdm.cache.hazelcast.serialize.DataSerializationFactoryImpl"/>
				</hz:data-serializable-factories>
				<!--hz:portable-factories>
					<hz:portable-factory factory-id="1" class-name="com.bagri.xdm.process.hazelcast.pof.PortableFactoryImpl"/>
				</hz:portable-factories-->
				<hz:serializers>
					<hz:serializer type-class="com.bagri.xdm.system.XDMType" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMTypeSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMModule" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMModuleSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMLibrary" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMLibrarySerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMFunction" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMFunctionSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMParameter" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMParameterSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMNode" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMNodeSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMSchema" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMSchemaSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMCollection" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMCollectionSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMFragment" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMFragmentSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMIndex" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMIndexSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMRole" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMRoleSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMUser" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMUserSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMPermission" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMPermissionSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMTriggerAction" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMTriggerActionSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMJavaTrigger" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMJavaTriggerSerializer"/>
					<hz:serializer type-class="com.bagri.xdm.system.XDMXQueryTrigger" class-name="com.bagri.xdm.client.hazelcast.serialize.system.XDMXQueryTriggerSerializer"/>
				</hz:serializers>
			</hz:serialization>
			<hz:member-attributes>
				<hz:attribute name="xdm.cluster.node.name">${xdm.cluster.node.name:first}</hz:attribute>
				<hz:attribute name="xdm.cluster.node.role">server</hz:attribute>
				<hz:attribute name="xdm.cluster.node.schemas">${xdm.cluster.node.schemas}</hz:attribute>
				<hz:attribute name="xdm.node.instance">${xdm.node.instance}</hz:attribute>
			</hz:member-attributes>
			<hz:lite-member enabled="true"/>
		</hz:config>
	</hz:hazelcast>

	<hz:executorService id="sys-exec-pool" name="sys-exec-pool" instance-ref="hzInstance"/>
	
	<bean id="accBridge" class="com.bagri.xdm.cache.hazelcast.impl.AccessManagementBridge">
		<property name="hazelcastInstance" ref="hzInstance"/>
	</bean>

</beans>