<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>xqj</id>
    <includeBaseDirectory>false</includeBaseDirectory>
    <formats>
        <format>jar</format>
    </formats>

    <moduleSets>
        <moduleSet>
	    <useAllReactorProjects>true</useAllReactorProjects>
	    <excludes> 
            	<exclude>com.bagri.db:bagri-distr</exclude>
            	<exclude>com.bagri.db:bagri-samples-*</exclude>
            	<exclude>com.bagri.db:bagri-server-*</exclude>
            	<exclude>com.bagri.db:bagri-store-*</exclude>
            	<exclude>com.bagri.db:bagri-test-*</exclude>
            	<exclude>com.bagri.db:bagri-tools-*</exclude>
	    </excludes>
	    <binaries>
        	<outputDirectory>/</outputDirectory>
	    	<includes>
            	    <include>com.bagri.db:bagri-common</include>
		    <include>com.bagri.db:bagri-xdm</include>
            	    <include>com.bagri.db:bagri-client-hazelcast</include>
            	    <include>com.bagri.db:bagri-xqj</include>
            	    <include>com.bagri.db:bagri-xquery-saxon</include>
            	    <!-- third-party modules -->
            	    <include>com.hazelcast:hazelcast-all</include>
            	    <include>org.slf4j:slf4j-api</include>
            	    <include>ch.qos.logback:logback-classic</include>
            	    <include>ch.qos.logback:logback-core</include>
            	    <include>net.sf.saxon:Saxon-HE</include>
            	    <!-- what about Xerces and XSteam?! -->
	    	</includes>
        	<unpack>true</unpack>
	    </binaries>
        </moduleSet>                      
    </moduleSets>

</assembly>  
