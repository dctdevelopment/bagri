<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

    <id>hazelcast-test</id>
    <includeBaseDirectory>true</includeBaseDirectory>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>

    <componentDescriptors>
        <componentDescriptor>common.xml</componentDescriptor>
    </componentDescriptors>

    <moduleSets>
        <moduleSet>
	    <useAllReactorProjects>true</useAllReactorProjects>
	    <includes> 
            	<include>*:bagri-test-tpox:*</include>
	    </includes>
	    <sources>
		<includeModuleDirectory>false</includeModuleDirectory>
        	<fileSets>
          	    <fileSet>
            		<outputDirectory>/tpox</outputDirectory>
            		<includes>
	                    <include>**/input/*.*</include>
               		    <include>**/queries/**</include>
		        </includes>
          	    </fileSet>
        	</fileSets>
      	    </sources>
	    <binaries>
        	<outputDirectory>/lib</outputDirectory>
       		<includes>
                    <include>*:bagri-test-common:*</include>
                    <include>*:bagri-test-tpox:*</include>
                    <include>*:commons-cli:*</include>
                    <include>*:marklogic-xcc:*</include>
	        </includes>
		<unpack>false</unpack>
	    </binaries>
        </moduleSet>                      
        <moduleSet>
	    <useAllReactorProjects>true</useAllReactorProjects>
	    <includes> 
            	<include>*:bagri-test-ycsb:*</include>
	    </includes>
	    <sources>
		<includeModuleDirectory>false</includeModuleDirectory>
        	<fileSets>
          	    <fileSet>
            		<outputDirectory>/ycsb</outputDirectory>
            		<includes>
	                    <include>workload**</include>
		        </includes>
          	    </fileSet>
        	</fileSets>
      	    </sources>
	    <binaries>
        	<outputDirectory>/lib</outputDirectory>
		<unpack>false</unpack>
	    </binaries>
        </moduleSet>                      
    </moduleSets>

    <fileSets>
        <!--tpox exec files-->
        <fileSet>
            <directory>src/main/tpox</directory>
            <outputDirectory>/tpox</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>755</fileMode>
            <includes>
                <include>*.sh</include>
                <include>*.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/tpox</directory>
            <outputDirectory>/tpox</outputDirectory>
            <lineEnding>windows</lineEnding>
            <includes>
                <include>*.cmd</include>
            </includes>
        </fileSet>

        <!--ycsb exec files-->
        <fileSet>
            <directory>src/main/ycsb</directory>
            <outputDirectory>/ycsb</outputDirectory>
            <lineEnding>unix</lineEnding>
            <fileMode>755</fileMode>
            <includes>
                <include>*.sh</include>
                <include>*.conf</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>src/main/ycsb</directory>
            <outputDirectory>/ycsb</outputDirectory>
            <lineEnding>windows</lineEnding>
            <includes>
                <include>*.cmd</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>  
