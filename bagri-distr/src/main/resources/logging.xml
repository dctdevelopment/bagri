<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">
<!--configuration-->

    <jmxConfigurator/>
    
    <!--contextName>xdm-cache</contextName-->

    <if condition='isDefined("node.name")'>
        <then>
            <property name="prefix" value="${node.name}"/>
        </then>
        <else>
            <property name="prefix" value="xdm"/>
        </else>
    </if>

    <if condition='isDefined("node.instance")'>
        <then>
            <property name="suffix" value="${node.instance}"/>
        </then>
        <else>
            <timestamp key="suffix" datePattern="yyyyMMdd'T'HHmmss"/>
        </else>
    </if>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
        </layout>
    </appender>

    <!--property resource="xdm-cache.properties" /-->

    <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
    	<file>${node.logdir}/cache/${prefix}-server-${suffix}.log</file>
    	<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
      		<!-- rollover daily -->
      		<fileNamePattern>${node.logdir}/cache/${prefix}-server-${suffix}-%d{yyyy-MM-dd}.%i.gz</fileNamePattern>
      		<maxHistory>4</maxHistory>
      		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
        		<!-- or whenever the file size reaches 20MB -->
        		<maxFileSize>50MB</maxFileSize>
      		</timeBasedFileNamingAndTriggeringPolicy>
    	</rollingPolicy>
    	<encoder>
        	<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n</pattern>
    	</encoder>
    </appender>


    <logger name="com.bagri">
        <level value="${xdm.log.level}"/>
    </logger>

    <!--logger name="com.bagri.xdm.cache.factory">
        <level value="${xdm.log.level}"/>
    </logger-->

    <!--logger name="com.bagri.xdm.cache.hazelcast.security.BagriJAASInvocationHandler">
        <level value="debug"/>
    </logger-->

    <!--logger name="com.bagri.xdm.cache.hazelcast.store.DummyCacheStore"-->
    <!--logger name="com.bagri.xdm.cache.hazelcast.store">
        <level value="debug"/>
    </logger-->

    <!--logger name="com.bagri.xdm.cache.process.XDMDataProcessor">
        <level value="debug"/>
    </logger-->

    <logger name="com.hazelcast">
        <level value="info"/>
    </logger>

    <logger name="org.springframework.core.env">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.beans.factory.annotation.InjectionMetadata">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.beans.factory.support.DefaultListableBeanFactory">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.jms.core.JmsTemplate">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.jdbc.core.JdbcTemplate">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.jdbc.datasource.DataSourceUtils">
        <level value="info"/>
    </logger>
    <logger name="org.springframework.jdbc.support.JdbcUtils">
        <level value="info"/>
    </logger>


    <root>
        <level value="debug"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="ROLLING"/>
    </root>

</configuration>
