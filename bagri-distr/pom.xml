<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.sdv.bagri</groupId>
        <artifactId>bagri</artifactId>
        <version>0.3.1-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <artifactId>bagri-distr</artifactId>
    <packaging>pom</packaging>
    <name>bagri-distr</name>
    <description>BagRi Distributive module</description>

    <!--modules>
        <module>bagri-distr-hazelcast</module>
    </modules-->

    <dependencies>
        <!--dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-common</artifactId>
        </dependency>                     
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-xdm</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-client-api</artifactId>
        </dependency-->

        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-server-hazelcast</artifactId>
        </dependency>

        <dependency>
	    <groupId>com.sdv.bagri</groupId>
	    <artifactId>bagri-tools-vvmp</artifactId>
	    <version>${project.version}</version>
	    <type>nbm</type>
        </dependency>

        <!--dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-client-xqj</artifactId>
        </dependency-->
    </dependencies>

    <profiles>
        <profile>
            <id>distr</id>
            <build>
                <plugins>

                    <plugin>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>aggregate</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>aggregate</goal>
                                </goals>
                                <configuration>
                                    <aggregate>true</aggregate>

                                    <!-- switch on dependency-driven aggregation -->
                                    <!--includeDependencySources>true</includeDependencySources-->
				    <!--includeTransitiveDependencySources>true</includeTransitiveDependencySources-->

                                    <dependencySourceIncludes>
                                        <dependencySourceInclude>com.sdv.bagri:*</dependencySourceInclude>
                                    </dependencySourceIncludes>

                                    <debug>true</debug>
                                    <verbose>true</verbose>
				    <outputDirectory>${project.build.directory}/javadoc</outputDirectory>

                                    <subpackages>com.bagri.*</subpackages>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
				    <finalName>bagri-${project.version}</finalName>
                                    <descriptors>
                                        <descriptor>src/main/assembly/xqj-driver.xml</descriptor>
                                        <descriptor>src/main/assembly/hazelcast.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>

</project>
