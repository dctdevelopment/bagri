<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.sdv.bagri</groupId>
        <artifactId>bagri</artifactId>
        <version>0.5.1-SNAPSHOT</version>
        <relativePath>..</relativePath>
    </parent>

    <artifactId>bagri-distr</artifactId>
    <packaging>jar</packaging>
    <name>bagri-distr</name>
    <description>BagRi Distributive module</description>

    <dependencies>
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-common</artifactId>
        </dependency>                     
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-xdm</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-client-common</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-client-hazelcast</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-xqj</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-xquery-api</artifactId>
        </dependency>
        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-xquery-saxon</artifactId>
        </dependency>

        <dependency>
            <groupId>com.sdv.bagri</groupId>
            <artifactId>bagri-server-hazelcast</artifactId>
        </dependency>

        <!--dependency>
	    <groupId>com.sdv.bagri</groupId>
	    <artifactId>bagri-tools-vvmp</artifactId>
	    <version>${project.version}</version>
	    <type>nbm</type>
        </dependency-->
    </dependencies>

    <profiles>
        <profile>
            <id>distr</id>
            <build>
                <plugins>

                    <plugin>
                        <artifactId>maven-javadoc-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>javadoc-jar</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>jar</goal>
                                </goals>
                                <configuration>
                                    <!-- switch on dependency-driven aggregation -->
                                    <includeDependencySources>true</includeDependencySources>
				    <includeTransitiveDependencySources>false</includeTransitiveDependencySources>

                                    <dependencySourceExcludes>
                                        <dependencySourceExclude>com.sdv.bagri:bagri-server*</dependencySourceExclude>
                                        <!--dependencySourceExclude>com.sdv.bagri:bagri-test*</dependencySourceExclude-->
                                        <!--dependencySourceExclude>com.sdv.bagri:bagri-tools*</dependencySourceExclude-->
                                    </dependencySourceExcludes>

                                    <doctitle>Bagri: XML DB on top of Distributed Cache</doctitle>
                                    <verbose>false</verbose>
          			    <links>
					<link>http://docs.hazelcast.org/docs/3.3/javadoc/</link>
					<link>http://www.saxonica.com/documentation9.5/index.html#!javadoc</link>
          			    </links>				    

                                    <windowtitle>Bagri: XML DB on top of Distributed Cache</windowtitle>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>assembly</id>
                                <phase>package</phase>
                                <goals>
                                    <goal>single</goal>
                                </goals>
                                <configuration>
				    <finalName>bagri-${project.version}</finalName>
                                    <descriptors>
                                        <descriptor>src/main/assembly/xqj-driver.xml</descriptor>
                                        <descriptor>src/main/assembly/hazelcast.xml</descriptor>
                                        <descriptor>src/main/assembly/hazelcast-test.xml</descriptor>
                                    </descriptors>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>

                </plugins>
            </build>
        </profile>
    </profiles>

</project>
